<body>
  <div class="container">
    <% include partials/navbar %>

      <form class="my-2" action="/document/add" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="description">Document description:</label>
          <textarea class="form-control" name="description" id="description" cols="30" rows="10"></textarea>
        </div>

        <div class="form-group">
          <label for="file-select">Upload file:</label>
          <input class="form-control" type="file" name="image" id="file-select">
        </div>

        <div class="form-group">
          <label for="doc_id">Document id:</label>
          <input class="form-control" type="number" name="docId" id="doc_id">
        </div>

        <button type="submit" class="btn btn-dark">Upload</button>
      </form>

      <% include partials/bootstrap_includes %>
  </div>
