<!DOCTYPE html>
<html>

<head>
  <% include partials/head %>
</head>

<body>
  <div class="container">
    <% include partials/navbar %>

      <form class="my-2" action="/search" method="post">
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="descriptionSearch" id="description">
        </div>
        <div class="form-group">
          <label for="id">Id:</label>
          <input class="form-control" type="number" name="id" id="id">
        </div>
        <button type="submit" class="btn btn-dark">Search</button>
      </form>
      
      <div class="row">

        <% out.res.forEach(function(doc) { %>
          <div class="col-lg-3 col-sm-6">
            <%- include('partials/documentCard', { doc }) %>
          </div>
          <% }); %>

      </div>
  </div>
  <% include partials/bootstrap_includes %>
</body>

</html>